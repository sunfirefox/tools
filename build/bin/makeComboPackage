#!/bin/bash
#
#   makeComborPackage - Create combo package
#
#   This script creates ....
#
#   $(BLD_PRODUCT)-$(BLD_VERSION)-$(BLD_NUMBER)-combo.tgz
#
#   Copyright (c) Embedthis Software LLC, 2003-2011. All Rights Reserved.
#
################################################################################

makeComboPackage() {
    local file

    log Create Combo package
    cd ${ROOT_DIR}
    file="${BLD_OUT_DIR}/releases/${BLD_PRODUCT}-${BLD_VERSION}-${BLD_NUMBER}-combo.tar"
    rm -f ${file}*
    log Run "tar -cf ${file} ."
    tar -cf ${file} .
    log Run "gzip ${file}"
    gzip ${file}
    cd ${HOME}
}

makeComboPackage
